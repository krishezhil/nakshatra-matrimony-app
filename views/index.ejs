    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        
        .main-container {
            min-height: 100vh;
            background: linear-gradient(135deg, rgba(255, 215, 0, 0.8) 0%, rgba(220, 20, 60, 0.8) 50%, rgba(255, 99, 71, 0.8) 100%), 
                        url('/assets/background-image.jpg') center/cover no-repeat fixed;
            position: relative;
        }
        
        .main-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(139, 0, 0, 0.1);
            z-index: 1;
        }
        
        .content-wrapper {
            position: relative;
            z-index: 2;
            padding-top: 100px;
            padding-bottom: 50px;
        }
        
        .hero-banner {
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            border: 3px solid rgba(255, 215, 0, 0.6);
            padding: 60px;
            margin-bottom: 50px;
            text-align: center;
            color: white;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        }
        
        .hero-title {
            font-size: 3.5rem;
            font-weight: bold;
            color: #FFD700;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.8);
            font-family: 'Noto Sans Tamil', 'Noto Sans', sans-serif;
            margin-bottom: 20px;
            letter-spacing: 2px;
        }
        
        .hero-subtitle {
            font-size: 1.8rem;
            color: #FFFFFF;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
            font-family: 'Noto Sans Tamil', 'Noto Sans', sans-serif;
            margin-bottom: 30px;
            font-weight: 600;
        }
        
        .hero-description {
            font-size: 1.3rem;
            color: #FFFACD;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
            margin-bottom: 40px;
            line-height: 1.7;
        }
        
        .action-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 60px;
        }
        
        .action-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border: 2px solid rgba(255, 215, 0, 0.5);
            border-radius: 20px;
            padding: 40px 30px;
            text-align: center;
            color: white;
            transition: all 0.4s ease;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
        }
        
        .action-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 215, 0, 0.2), transparent);
            transform: rotate(45deg);
            transition: all 0.6s ease;
            opacity: 0;
        }
        
        .action-card:hover::before {
            opacity: 1;
            animation: shimmer 2s infinite;
        }
        
        .action-card:hover {
            transform: translateY(-15px) scale(1.02);
            border-color: rgba(255, 215, 0, 0.9);
            box-shadow: 0 25px 50px rgba(255, 215, 0, 0.2);
            background: rgba(255, 215, 0, 0.2);
        }
        
        .card-icon {
            font-size: 4rem;
            color: #FFD700;
            margin-bottom: 25px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
            position: relative;
            z-index: 2;
        }
        
        .card-title {
            font-size: 1.8rem;
            color: #FFFFFF;
            font-weight: bold;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
            position: relative;
            z-index: 2;
        }
        
        .card-description {
            color: #FFFACD;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
            margin-bottom: 30px;
            line-height: 1.6;
            font-size: 1.1rem;
            position: relative;
            z-index: 2;
        }
        
        .card-button {
            background: linear-gradient(45deg, #FFD700, #FFA500);
            color: #8B0000;
            border: none;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 50px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(255, 215, 0, 0.3);
            text-decoration: none;
            display: inline-block;
            position: relative;
            z-index: 2;
        }
        
        .card-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(255, 215, 0, 0.5);
            background: linear-gradient(45deg, #FFFF00, #FFD700);
            color: #8B0000;
        }
        
        .floating-elements {
            position: fixed;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
            pointer-events: none;
        }
        
        .floating-symbol {
            position: absolute;
            color: rgba(255, 215, 0, 0.15);
            font-size: 4rem;
            animation: float 15s ease-in-out infinite;
        }
        
        .floating-symbol:nth-child(1) {
            top: 10%;
            left: 10%;
            animation-delay: 0s;
        }
        
        .floating-symbol:nth-child(2) {
            top: 70%;
            right: 15%;
            animation-delay: 5s;
        }
        
        .floating-symbol:nth-child(3) {
            bottom: 20%;
            left: 20%;
            animation-delay: 10s;
        }
        
        .floating-symbol:nth-child(4) {
            top: 40%;
            right: 25%;
            animation-delay: 3s;
        }
        
        .floating-symbol:nth-child(5) {
            bottom: 60%;
            left: 60%;
            animation-delay: 7s;
        }
        
        @keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
                opacity: 0.15;
            }
            50% {
                transform: translateY(-40px) rotate(180deg);
                opacity: 0.3;
            }
        }
        
        @keyframes shimmer {
            0% {
                transform: translateX(-100%) translateY(-100%) rotate(45deg);
            }
            100% {
                transform: translateX(100%) translateY(100%) rotate(45deg);
            }
        }
        
        @media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }
            .hero-banner {
                padding: 40px 20px;
            }
            .action-cards {
                grid-template-columns: 1fr;
                gap: 20px;
            }
            .action-card {
                padding: 30px 20px;
            }
        }
    </style>
</head>
