# Environment Configuration Template for Matrimony App
# Copy this file to .env and update the values

NODE_ENV=development
PORT=3131

# Application Settings
APP_NAME=Hindu Matrimony - Nakshatra Matching
APP_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=trace
CONSOLE_LOGGING=true
FILE_LOGGING=true

# Security Settings (IMPORTANT: Change these in production)
SESSION_SECRET=your-secret-key-here-change-in-production
BCRYPT_ROUNDS=12

# Database/File Storage (IMPORTANT: Change in production)
DATA_ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# Browser Settings
AUTO_OPEN_BROWSER=true
CHROME_APP_MODE=true

# Performance Settings
MAX_PROFILES_PER_PAGE=50
MATCHING_ALGORITHM_TIMEOUT=30000

# Development Settings (only in development)
ENABLE_DEBUG_LOGS=true
ENABLE_PERFORMANCE_MONITORING=true